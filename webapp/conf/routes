# Routes framework
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /login                      controllers.Application.login()
POST    /authenticate               controllers.Application.authenticate()
GET     /logout                     controllers.Application.logout()
GET     /dashboard                  controllers.Dashboard.index()

# Project module
GET     /projects                   controllers.Projects.index()
POST    /projects/add               controllers.Projects.add()
DELETE  /projects/:projectId        controllers.Projects.delete(projectId: Long)
PUT     /projects/:projectId        controllers.Projects.rename(projectId: Long)

# Client module
GET     /clients                    controllers.Clients.index()
POST    /clients/add                controllers.Clients.add()
DELETE  /clients/:clientId          controllers.Clients.delete(clientId: Long)
PUT     /clients/:clientId          controllers.Clients.rename(clientId: Long)

# User module
GET     /users                      controllers.Users.index()
POST    /users/add                  controllers.Users.add()
POST    /users/delete/:email        controllers.Users.delete(email: String)
GET     /users/:email               controllers.Users.view(email: String)
PUT     /users/:email               controllers.Users.edit(email: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
